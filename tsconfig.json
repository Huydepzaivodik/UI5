{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "Node",
    "sourceMap": true,
    "rootDir": "./webapp",
    "outDir": "./dist",
    "baseUrl": "./",
    "noCheck": true,
    "paths": {
      "bjmproject/*": [
        "./webapp/*"
      ],
      "unit/*": [
        "./webapp/test/unit/*"
      ],
      "integration/*": [
        "./webapp/test/integration/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": ["@sapui5/ts-types"]
  },
  "include": ["webapp/**/*"]
}