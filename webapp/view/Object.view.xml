<mvc:View
  controllerName="bjmproject.controller.Object"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:semantic="sap.f.semantic"
  xmlns:form="sap.ui.layout.form">

  <semantic:SemanticPage
    id="jobDetailsPage"
    headerPinnable="false"
    toggleHeaderOnTitleClick="false">
    <semantic:titleHeading>
      <FlexBox alignItems="Start" justifyContent="SpaceBetween">
        <Image src="https://www.sap.com/dam/application/shared/logos/sap-logo-svg.svg" width="75px" />
        <Title text="{i18n>ObjectPageTitle}"/>
      </FlexBox>
    </semantic:titleHeading>
    <semantic:headerContent>
      <FlexBox alignItems="Start" justifyContent="SpaceBetween">
        <Panel backgroundDesign="Transparent">
          <ObjectAttribute
            title="{i18n>ObjectJobIdText}"
            text="{Id}" />
        </Panel>
      </FlexBox>
    </semantic:headerContent>
    <semantic:content>
      <Panel
        class="sapUiNoContentPadding myPanel"
        backgroundDesign="Transparent"
        headerText="{i18n>ObjectJobTabTitle}">
        <content>
          <HBox>
  <VBox width="50%">
    <form:SimpleForm
      layout="ResponsiveGridLayout"
      columnsXL="1"
      columnsL="1"
      columnsM="1"
      labelSpanXL="4"
      labelSpanL="4"
      labelSpanM="12"
      emptySpanXL="0"
      emptySpanL="0"
      emptySpanM="0">
      <form:content>
        <Label text="{i18n>ObjectJobNameText}" />
        <Text text="{Jobname}" />
        <Label text="{i18n>ObjectJobCountText}" />
        <Text text="{Jobcount}" />
        <Label text="{i18n>ObjectJobStatusText}" />
        <Text text="{Status}" />
        <Label text="{i18n>ObjectJobExecutionDateText}" />
        <Text text="{Strtdate}" />
        <Label text="{i18n>ObjectJobExecutionTimeText}" />
        <Text text="{Strttime}" />
        <Label text="{i18n>ObjectJobEndDateText}" />
        <Text text="{Enddate}" />
        <Label text="{i18n>ObjectJobEndTimeText}" />
        <Text text="{Endtime}" />
        <Label text="{i18n>ObjectJobAuthcknamText}" />
        <Text text="{Authcknam}" />
        <Label text="{i18n>ObjectJobStepcountText}" />
        <Text text="{Stepcount}" />
        <Label text="{i18n>ObjectJobPrognameText}" />
        <Text text="{Progname}" />
        <Label text="{i18n>ObjectJobVariantText}" />
        <Text text="{Variant}" />
        <Label text="{i18n>ObjectJobError_msgText}" />
        <Text text="{ErrorMsg}" />
      </form:content>
    </form:SimpleForm>
  </VBox>
  <VBox width="50%">
    <form:SimpleForm
      layout="ResponsiveGridLayout"
      columnsXL="1"
      columnsL="1"
      columnsM="1"
      labelSpanXL="4"
      labelSpanL="4"
      labelSpanM="12"
      emptySpanXL="0"
      emptySpanL="0"
      emptySpanM="0">
      <form:content>
        <Label text="{i18n>ObjectJobDurationText}" />
        <Text text="{Duration}" />
        <Label text="{i18n>ObjectJobCustom_logText}" />
        <Text text="{CustomLog}" />
        <Label text="{i18n>ObjectJobAlert_sentText}" />
        <Text text="{AlertSent}" />
        <Label text="{i18n>ObjectJobDelayText}" />
        <Text text="{Delay}" />
        <Label text="{i18n>ObjectJobStart_dateText}" />
        <Text text="{Sdlstrtdt}" />
        <Label text="{i18n>ObjectJobStart_timeText}" />
        <Text text="{Sdlstrttm}" />
        <Label text="{i18n>ObjectJobCreate_byText}" />
        <Text text="{CreateBy}" />
        <Label text="{i18n>ObjectJobCreate_onText}" />    
        <Text text="{CreateOn}" />
        <Label text="{i18n>ObjectJobCreate_atText}" />    
        <Text text="{CreateAt}" />
        <Label text="{i18n>ObjectJobChange_byText}" />
        <Text text="{ChangeBy}" />
        <Label text="{i18n>ObjectJobChange_onText}" />
        <Text text="{ChangeOn}" />
        <Label text="{i18n>ObjectJobChange_atText}" />
        <Text text="{ChangeAt}" />
      </form:content>
    </form:SimpleForm>
  </VBox>
</HBox>

        </content>
      </Panel>
    </semantic:content>
  </semantic:SemanticPage>
</mvc:View>